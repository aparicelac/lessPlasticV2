<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="531dp"
        android:layout_margin="40dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/formWeight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño: "
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="17dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="54dp">

            <RadioButton
                android:id="@+id/radio_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="0-500 ml" />

            <RadioButton
                android:id="@+id/radio_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="500ml-1L" />

            <RadioButton
                android:id="@+id/radio_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="1L-2L" />

            <RadioButton
                android:id="@+id/radio_2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="2L a más" />

            <TextView
                android:id="@+id/awardsUsurnameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad:"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="399dp" />

            <Spinner
                android:id="@+id/formSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="173dp"
                tools:layout_editor_absoluteY="448dp"
                android:entries="@array/cantidad"/>
        </RadioGroup>

        <TextView
            android:id="@+id/formWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso en gramos:"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="288dp" />

        <EditText
            android:id="@+id/edtFormWeight"
            android:layout_width="133dp"
            android:layout_height="51dp"
            android:backgroundTint="@color/gray1"
            android:ems="10"
            android:hint="Peso"
            android:inputType="textPersonName"
            android:textColorHint="@color/gray1"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="328dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFormRegistrar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:layout_marginTop="20dp"
            android:text="Registrar"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="514dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFormCancelar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_round_button"
            android:text="Cancelar"
            android:textColor="@color/gray1"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="596dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>